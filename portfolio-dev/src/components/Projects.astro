---
import PythonIcon from "../icons/PythonIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-black text-white",
    icon: PythonIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  }
};

const PROJECTS = [
  {
    title: "Project I",
    description: "body for the projects description",
    link: "localhost:3000",
    repo: "https://www.github.com",
    image: "https://placehold.co/600x400/png",
    tags: [TAGS.PYTHON,TAGS.TAILWIND],
  },
];
---

{
   PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
            <tag.icon class="size-8" />
            {tag.name}
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Preview del proyecto ${image}`}
      />
    </article>
  ))
}
