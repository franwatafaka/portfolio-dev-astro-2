---
import TechStackPill from  '../icons/TechStackPill.astro';
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
  company: string;
  techstack: string[];
  aditionalskills?:string
}
const { company, title, description, techstack, aditionalskills, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<div class="group relative">
  <time
    class="mb-1 text-lg font-normal leading-none text-gray-400 dark:text-gray-500"
  >
    {date}
  </time>
  <h3
    class="text-lg font-semibold text-gray-900 dark:text-white mt-1"
    style="color:rgb(254 240 138 / 0.9)"
  >
    {company}
  </h3>
  <h2
    class="text-lg font-semibold text-gray-900  dark:text-white mt-1"
    style="color:rgb(254 202 202 / 0.9)"
  >
    {title}
  </h2>
<div class="exp-item-description transition-all overflow-hidden max-h-0 group-hover:max-h-96">
    <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
      <div class="exp-item-description-text">
        {description}
      </div>
    </p>
  </div>
  <p class="mb-4 text-base font-normal text-gray-200 text-pretty mt-1">

    <!-- {techstack} -->
    <div class="tech-stack flex flex-wrap gap-2 mt-2">
      {techstack.map(item => (
        <TechStackPill name={item} />
      ))}
    </div>
  </p> 
  <!-- <p class="mb-4 text-base font-normal text-gray-200 text-pretty mt-3">
    {aditionalskills}
  </p> -->
  {
    link && (
      <a
        href={link}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
      >
        Saber mas...{" "}
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </a>
    )
  }
</div>
